<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet author="samuylov" id="1.1">
        <createTable tableName="COMMENTS">
            <column name="ID" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="NICK_NAME" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="TEXT" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="DATE" type="DATE">
                <constraints nullable="false"/>                
            </column>
            <column name="BOOK_ID" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="samuylov" id="1.2">
        <addPrimaryKey columnNames="ID" constraintName="id_PK" tableName="COMMENTS"/>
    </changeSet>
    <changeSet author="liquibase-docs" id="addAutoIncrement-example">
        <addAutoIncrement columnDataType="int"
                          columnName="ID"
                          incrementBy="1"
                          startWith="1"
                          tableName="COMMENTS"/>
    </changeSet>
    <changeSet id="1.3" author="artur-hurynovich">
        <addForeignKeyConstraint baseTableName="COMMENTS" baseColumnNames="BOOK_ID" constraintName="FK_C_BOOK_ID"
                                 referencedTableName="BOOK"
                                 referencedColumnNames="ID"/>
    </changeSet>
</databaseChangeLog>
